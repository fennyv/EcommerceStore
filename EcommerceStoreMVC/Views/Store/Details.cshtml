@model Product
@{
}

<div class="container m-5" >
    <div class="row ">
        <div class="col-md-6 ">
            <img  src="~/products/@Model.ProductImage" class="img-fluid" alt="..." style=" contain" />
        </div>

        <div class="col-md-6">
            <h2>@Model.ProductName</h2>
           
            <div class="row mb-3">
            <div class="col-sm-3 fw-bold">
                Brand
            </div>
            <div class="col-sm-9">
                @Model.Brand
            </div>

        </div>
            <div class="row mb-3">
                <div class="col-sm-3 fw-bold">
                    Category
                </div>
                <div class="col-sm-9">
                    @Model.Category
                </div>

            </div>
            <h4>$@Model.ProductPrice</h4>
            <a asp-action="AddToCart" asp-controller="Cart" asp-route-id="@Model.ProductId"
               onclick="addToCart(this, @Model.ProductId) "
               class="btn btn-warning btn-sm">
                Add to Cart
                <i class=" bi bi-cart4 " ></i>
             
            </a>
            <hr />
             
            
                <div class="col-sm-3 fw-bold mb-2">
                    Description
                </div>
                <div style="white-space: pre-line" >
                    @Model.ProductDescription
                </div>

             
            
        </div>
       
    </div>
</div>


