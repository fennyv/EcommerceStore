@{
}

<div class="mx-auto rounded border p-4" style="width:400px">
    <h2 class="text-center mb-3"> Forgot Password</h2>
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="row mt-3 mb-3">
            <div class="mx-auto ">
                <div class="alert alert-success alert-dismissible fade show shadow" role="alert">
                    @ViewBag.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="row mt-3 mb-3">
            <div class="mx-auto ">
                <div class="alert alert-danger alert-dismissible fade show shadow" role="alert">
                    @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    <form method="post">
        <div class=" mb-3">
            
           
                <label class="form-label">Email</label>
                <input name="email" class="form-control" value="@ViewBag.Email" />
                <span class="text-danger">@ViewBag.EmailError</span>
             
        </div>
        <div class="row mt-4">
            <div class="col  d-grid ">
                <button type="submit" class="btn btn-primary">Send Reset Link</button>
            </div>
            <div class="col   d-grid ">
                <a class="btn btn-outline-primary " asp-controller="Account" asp-action="Login" role="button">Cancel</a>
            </div>
        </div>
    </form>
</div>